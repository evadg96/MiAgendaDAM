<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".Fragments.Calendarios.CalendariosFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/estilo_redondo_azul"
        android:orientation="vertical"
        android:paddingBottom="65dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="65dp">

        <Button
            android:id="@+id/btn_cal_escolar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/estilo_redondo_blanco"
            android:text="@string/ver_calendario_escolar" />

        <Button
            android:id="@+id/btn_cal_festivos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/estilo_redondo_blanco"
            android:padding="10dp"
            android:text="@string/ver_calendario_festivos" />

    </LinearLayout>

</FrameLayout>