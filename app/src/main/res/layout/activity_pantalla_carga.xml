<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/azul_fondo"
    android:backgroundTint="@color/azul_fondo"
    tools:context="es.proyecto.eva.miagendadam.PantallaCarga">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azul_fondo"
        android:backgroundTint="@color/azul_fondo"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp">

        <RelativeLayout
            android:id="@+id/relativeLayout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="76dp"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="34dp">

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                tools:layout_editor_absoluteX="117dp"
                tools:layout_editor_absoluteY="69dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:srcCompat="@drawable/icon_pantalla_carga_mini"
                    tools:layout_editor_absoluteX="106dp"
                    tools:layout_editor_absoluteY="87dp" />

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/lbl_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="44dp"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:layout_toEndOf="@+id/relativeLayout5"
            android:layout_toRightOf="@+id/relativeLayout5"
            android:text="@string/app_version"
            android:textColor="@android:color/background_light"
            tools:layout_editor_absoluteX="174dp"
            tools:layout_editor_absoluteY="241dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
