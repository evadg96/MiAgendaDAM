<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.proyecto.eva.miagendafp">

    <!-- Permiso para acceder a internet para poder hacer las consultas a la base de datos de los archivos php -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".VolleyController.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:versionCode="15"
        android:versionName="1.0.1">
        <activity android:name=".PantallaCarga">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PantallaLogin"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RegistroNuevoUsuario"
            android:screenOrientation="portrait" />
        <activity android:name=".ConfirmaRegistro" />
        <activity android:name=".ReenviarCodigoConfirmacion" />
        <activity
            android:name=".NavMenu"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_nav_menu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RecuperarDatosUsuario"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AcercaDe"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Fragments.Diario.NuevoRegistroDiario"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Fragments.Diario.VerYEditarRegistroDiario"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".Fragments.Diario.BusquedaRegistros"
            android:screenOrientation="portrait" />
        <activity android:name=".Fragments.Diario.ResultadosBusqueda" />
        <activity android:name=".Fragments.Contactos.NuevoContacto" />
        <activity android:name=".Fragments.Contactos.VerContacto" />
        <activity android:name=".Fragments.Contactos.EditarContacto" />
        <activity android:name=".Fragments.Notas.VerEditarNota"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Fragments.Notas.NuevaNota"
            android:windowSoftInputMode="stateVisible"
            android:screenOrientation="portrait" />
        <activity android:name=".Fragments.Recursos.WebView" />
        <activity android:name=".Fragments.Recursos.ListadoComunidadesCalendario">
        </activity>
        <activity android:name=".Fragments.Recursos.ListadoPaginasRecomendadas"> </activity>
    </application>

</manifest>